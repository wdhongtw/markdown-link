{
  "name": "Markdown Link",
  "version": "0.3.0",
  "description": "Copy Markdown link for current tab",
  "icons": {
    "128": "images/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "Get Markdown URL"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+F"
      },
      "description": "Copy Markdown link for current tab"
    }
  },
  "manifest_version": 3
}
